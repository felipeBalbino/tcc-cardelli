<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="UTF-8" /> 
	<package name="myPackage" extends="struts-default" namespace="/jsp">

		<global-results>
    		<result name="error" >
        		<param name="actionName">exceptionInterceptor</param>
    		</result>
		</global-results>


		<global-exception-mappings>
		   <exception-mapping  exception="java.lang.Exception" result="error"/>
		</global-exception-mappings>
		
		
		
		<action name="exceptionInterceptor" class="br.edu.gamaesouza.intranet.utils.ExceptionInterceptor">
		    <result name="canNotLogDatabaseError">/jsp/erros.jsp</result>
		</action>
		

		<action name="ouvidoria" class="br.edu.gamaesouza.intranet.action.OuvidoriaAction">
			<result name="refresh">/jsp/ouvidoria.jsp</result>
		</action>

		<action name="buscarMaterial"
			class="br.edu.gamaesouza.intranet.action.BuscarMaterialAction"
			method="{1}">
			<result name="loadFields">/jsp/buscarMaterial.jsp</result>
		</action>

		<action name="index" class="br.edu.gamaesouza.intranet.action.IndexAction"
			method="{1}">

			<result name="paginaInicial">/jsp/indexEvents.jsp</result>

		</action>

		<action name="log" class="br.edu.gamaesouza.intranet.action.LoginAction"
			method="{1}">

			<result name="notlogged">/jsp/login.jsp</result>
			<result name="logged">/jsp/login.jsp</result>
			<result name="login">/jsp/login.jsp</result>
			<result name="senha">/painel/trocarsenha.jsp</result>
			<result name="register">/jsp/register.jsp</result>
			<result name="recuperar">/jsp/recuperarSenha.jsp</result>
		</action>


	</package>

	<package name="myPackage2" extends="struts-default" namespace="/painel">
         
		<global-results>
    		<result name="error" type="chain">
        		<param name="actionName">exceptionInterceptor</param>
    		</result>
		</global-results>


		<global-exception-mappings>
		   <exception-mapping  exception="java.lang.Exception" result="error"/>
		</global-exception-mappings>
		
		
		
		<action name="exceptionInterceptor" class="br.edu.gamaesouza.intranet.utils.ExceptionInterceptor">
		    <result name="canNotLogDatabaseError">/jsp/erros.jsp</result>
		</action>
		
		
		
		
		<action name="disciplinaLetiva" class="br.edu.gamaesouza.intranet.action.InscricaoDisciplinaAction" method="{1}" >
			<result name="SUCCESS">/painel/inscreverDisciplinaLetiva.jsp</result>			
		</action>

		<action name="curso" class="br.edu.gamaesouza.intranet.action.CursoAction"
			method="{1}">
			<result name="adicionarCurso">/painel/adicionarCurso.jsp</result>
			<result name="cursos">/painel/listarCursos.jsp</result>
			<result name="login">/jsp/login.jsp</result>
		</action>
		

		<action name="materia" class="br.edu.gamaesouza.intranet.action.DisciplinaAction"
			method="{1}">
			<result name="adicionarMateria">/painel/adicionarMateria.jsp</result>
			<result name="disciplinas">/painel/listarMaterias.jsp</result>
			<result name="novo">/painel/materia!novo.java</result>
			<result name="login">/jsp/login.jsp</result>
		</action>
		
		<action name="letiva" class="br.edu.gamaesouza.intranet.action.DisciplinaLetivaAction"
			method="{1}">
			<result name="letiva">/painel/listarDisciplinaLetiva.jsp</result>
			<result name="nova">/painel/adicionarDisciplinaLetiva.jsp</result>
		</action>

		<action name="upload" method="{1}"
			class="br.edu.gamaesouza.intranet.action.UploadAction">
			<result name="adicionarArquivo">/painel/adicionarArquivo.jsp</result>
			<result name="modificarArquivo">/painel/listarArquivos.jsp</result>
			<result name="login">/jsp/login.jsp</result>
		</action>

		<action name="evento" method="{1}"
			class="br.edu.gamaesouza.intranet.action.EventoAction">
			<result name="this">/painel/adicionarEvento.jsp</result>
			<result name="modificarEvento">/painel/listarEventos.jsp</result>
			<result name="login">/jsp/login.jsp</result>
		</action>
		
		<action name="noticia" method="{1}"
			class="br.edu.gamaesouza.intranet.action.NoticiaAction">
			<result name="this">/painel/adicionarNoticia.jsp</result>
			<result name="modificarNoticia">/painel/listarNoticias.jsp</result>
			<result name="login">/jsp/login.jsp</result>
		</action>

		<action name="professor" method="{1}"
			class="br.edu.gamaesouza.intranet.action.ProfessorAction">
			<result name="this">/painel/adicionarProfessor.jsp</result>
			<result name="modificarProfessor">/painel/listarProfessores.jsp</result>
			<result name="login">/jsp/login.jsp</result>
		</action>
		
		<action name="aluno" class="br.edu.gamaesouza.intranet.action.AlunoAction"
			method="{1}">
			<result name="listAlunos">/painel/listarAlunos.jsp</result>
			<result name="register">/painel/registerAluno.jsp</result>
		</action>
		
		<action name="hora" class="br.edu.gamaesouza.intranet.action.HoraAction"
			method="{1}">
			<result name="listAEPSuccess"></result>
			<result name="listAEPFailure"></result>
			<result name="alterAEPSuccess"></result>
			<result name="alterAEPFailure"></result>
			<result name="deleteAEPSuccess"></result>
			<result name="deleteAEPFailure"></result>
			<result name="saveAEPSuccess"></result>
			<result name="saveAEPFailure"></result>
			<result name="listComplementarSuccess"></result>
			<result name="listComplementarFailure"></result>
			<result name="alterComplementarSuccess"></result>
			<result name="alterComplementarFailure"></result>
			<result name="deleteComplementarSuccess"></result>
			<result name="deleteComplementarFailure"></result>
			<result name="saveComplementarSuccess"></result>
			<result name="saveComplementarFailure"></result>			
		</action>

	</package>
</struts>

